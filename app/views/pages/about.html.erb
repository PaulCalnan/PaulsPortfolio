          <div class="collapse" id="education">
            <div class="card card-block">
              Education 1
            </div>
            <div class="card card-block">
              Education 2
            </div>
            <div class="card card-block">
              Education 3
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>
